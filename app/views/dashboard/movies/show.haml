.ui.sixteen.wide.column.grid
  .sixteen.wide.column.row
    .sixteen.wide.column
      .ui.raised.segment
        .ui.sixteen.wide.column.grid
          .sixteen.wide.column.row
            .four.wide.column
              = image_tag @movie[:image_url], class: 'ui rounded image'
              = button_to 'Suggest this movie', dashboard_movies_path(movie: @movie), class: 'ui green button', style: 'margin-top: 10px;'
            .five.wide.column
              .ui.blue.header
                = @movie[:title]
                .sub.header
                  = @movie[:description]
              .ui.blue.label
                = "#{@movie[:rating]} / 10"
            .seven.wide.column
              .ui.blue.center.aligned.header Similar Movies
              .ui.raised.segment
                .ui.relaxed.selection.divided.list
                  - @similar_movies.each do |movie|
                    .item
                      = image_tag movie[:primary_photo], class: 'ui avatar image'
                      .content
                        = link_to movie[:text], dashboard_movie_path(Time.now.to_i, movie: movie)
          .sixteen.wide.column.center.aligned.row
            .nine.wide.column
              .ui.blue.header
                Look for another movie
              = render 'dashboard/movies/form'
